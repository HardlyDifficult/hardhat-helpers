{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.12"],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "reason-string": ["error", { "maxLength": 64 }],
    "max-line-length": ["error", 120],
    "not-rely-on-time": "off",
    "var-name-mixedcase": "off"
  }
}
