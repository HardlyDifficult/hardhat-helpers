    "@typechain/ethers-v5": "10.1.0",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "chai": "4.3.6",
    "ethers": "5.6.9",
    "hardhat": "2.10.1",
    "mocha": "10.0.0",
